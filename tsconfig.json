{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "types": ["bun-types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
